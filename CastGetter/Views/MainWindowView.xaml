<Window x:Class="CastGetter.Views.MainWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CastGetter"
        mc:Ignorable="d"
        Title="CastGetter" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="60"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <ContentControl Name="MenuView" Grid.Row="0"/>
        <ContentControl Name="PanelView" Grid.Row="1"></ContentControl>
        <TabControl Grid.Row="2">
            <TabItem Header="Podcasts">
                <ContentControl Name="PodcastView"></ContentControl>
            </TabItem>
            <TabItem Header="Fortschritt">
                <ContentControl Name="ProgressView"></ContentControl>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
